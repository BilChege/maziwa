<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item description : "
                android:id="@+id/txtItemDescription"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtItemDescription"
                android:id="@+id/txtItemQuantity"
                android:text="Quantity ordered : "
                android:textSize="12dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtItemQuantity"
                android:text="Total Ordered : "
                android:textSize="12dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/txtItemTotal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/txtItemTotal"
                android:layout_centerHorizontal="true"
                style="@style/CustomButton"
                android:id="@+id/btnRemove"
                android:background="@color/accent"
                android:text="Remove"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>