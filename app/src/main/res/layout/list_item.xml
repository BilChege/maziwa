<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:magic="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_light"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:textColor="@drawable/bg_change_text_black"
            android:textSize="@dimen/addrec_question_title"
             />

        <TextView
            android:id="@+id/preview_answers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#867970"
            android:visibility="gone"
            android:textSize="@dimen/addrec_question_title"
           />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#aaabaf"
            android:textSize="@dimen/addrec_question_title"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imv_next"
        style="@style/small_button"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:src="@android:drawable/star_off" />

</LinearLayout>